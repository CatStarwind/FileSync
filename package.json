{
	"name": "filesync",
	"version": "1.1.0",
	"publisher": "CatStarwind",
	"engines": {
		"vscode": "^1.44.0"
	},
	"license": "AGPL-3.0-or-later",
	"displayName": "File Sync",
	"description": "Sync a workbench folder's files when saving to specified destination folders.",
	"categories": [
		"Other"
	],
	"keywords": [
		"filemanagement",
		"sync"
	],
	"galleryBanner": {
		"color": "#007000",
		"theme": "dark"
	},
	"preview": false,
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "filesync.enable",
				"title": "File Sync: Enable"
			},
			{
				"command": "filesync.disable",
				"title": "File Sync: Disable"
			}
		],
		"configuration": [
			{
				"title": "FileSync",
				"properties": {
					"filesync.mappings": {
						"title": "Mappings",
						"description": "An array of objects (maps) that link a Source folder to one or more Destination folders.",
						"scope": "machine",
						"type": "array",
						"items": {
							"type": "object",
							"properties": {
								"source": {
									"title": "Source Folder",
									"description": "Path of source source folder to sync across destinations.",
									"type": "string"
								},
								"destination": {
									"title": "Destination Folders",
									"description": "Folders to be synced.",
									"oneOf": [
										{
											"type": "string",
											"title": "Destination Folder",
											"description": "Path of folder to be synced."
										},
										{
											"type": "array",
											"title": "Destinations",
											"items": {
												"anyOf": [
													{
														"type": "string",
														"title": "Destination Folder",
														"description": "Path of folder to be synced."
													},
													{
														"type": "object",
														"title": "Destination",
														"properties": {
															"name": {
																"type": "string",
																"title": "Destination name."
															},
															"path": {
																"type": "string",
																"title": "Folder path."
															},
															"active": {
																"type": "boolean",
																"title": "Determines if destination will be synced to."
															}
														},
														"required": [
															"name",
															"path",
															"active"
														],
														"additionalProperties": false
													}
												]
											},
											"uniqueItems": true
										}
									]
								}
							},
							"required": [
								"source",
								"destination"
							],
							"additionalProperties": false
						},
						"uniqueItems": true
					}
				}
			}
		]
	},
	"activationEvents": [
		"*"
	],
	"markdown": "github",
	"qna": "marketplace",
	"dependencies": {},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.17.20",
		"@types/vscode": "^1.44.0",
		"glob": "^7.1.6",
		"mocha": "^10.2.0",
		"tslint": "^5.20.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"extensionPack": [],
	"extensionDependencies": [],
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/CatStarwind/FileSync"
	}
}
