{
	"name": "filesync",
	"version": "0.1.0",
	"publisher": "CatStarwind",
	"engines": {
		"vscode": "^1.38.0"
	},
	"license": "AGPL-3.0-or-later",
	"displayName": "File Sync",
	"description": "Sync a workbench to specified destination folders.",
	"categories": [
		"Other"
	],
	"keywords": ["filemanagement","sync"],
	"galleryBanner": {},
	"preview": false,
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "filesync.enable",
				"title": "File Sync: Enable"
			}
			,{
				"command": "filesync.disable"
				,"title": "File Sync: Disable"
			}
		]
		,"configuration":[
			{
				"title": "FileSync",
				"properties": {
					"filesync.mappings":{
						"title": "Mappings"
						, "description": "An array of objects (maps) that link a Source folder to one or more Destination folders."
						, "scope": "machine"
						, "type": "array"
						, "items": {
							"type": "object"
							, "properties": {
								"source": {
									"title": "Source Folder"
									, "description": "Path of source source folder to sync across destinations."
									, "type": "string"
								}
								,"destination": {
									"title": "Destination Folders"
									, "description": "Folders to be synced."
									, "oneOf": [
										{ "type": "string", "title": "Destination Folder", "description": "Path of folder to be synced."}
										, { "type": "array", "items": { "type": "string", "title": "Path of Destination Folder" }, "uniqueItems": true}
										, {
											"type": "array"
											, "items": {
												"type": "object"
												, "title": "Destination Folder"
												, "description": "Name and Path of a folder to be synced."
												, "properties": {
													"name": { "type": "string"}
													, "path": {"type": "string"}
													, "active": {"type": "boolean"}
												}
												, "required": ["name", "path"]
												, "additionalProperties": false
											}
											,"uniqueItems": true
										}
									]
								}
							}
							, "required": ["source", "destination"]
							, "additionalProperties": false
						}
						, "uniqueItems": true
					}
				}
			}
		]
	},
	"activationEvents": [ "*" ],
	"markdown": "github",
	"qna": "marketplace",
	"dependencies": {},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.38.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.2.0"
	},
	"extensionPack": [],
	"extensionDependencies": [],
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/CatStarwind/FileSync"
	}
}
